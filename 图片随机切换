<body>
	<img src=" " id="img">
<script type="text/javascript">
	function img(){
   //存放图片路径
	var arr = ['a.jpg','b.jpg','c.jpg','d.jpg'];
	//随机获取数组下标
	key = Math.floor(Math.random()*arr.length);
	var str = arr[key];
	//获取元素
	var Img = document.getElementById('img');
    Img.src = 'images/'+str;
	}
	 setInterval(img,100);
	
</script>
